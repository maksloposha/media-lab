<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".MainActivity">

    <!-- Button for viewing audio files -->
    <Button
            android:id="@+id/btn_view_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audioFiles"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    <!-- Button for viewing video files -->
    <Button
            android:id="@+id/btn_view_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videoFiles"
            android:layout_below="@id/btn_view_audio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

</RelativeLayout>

